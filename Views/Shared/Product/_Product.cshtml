@model Product

<div class="card m-3 shadow" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text text-muted">
            @Model.Description
        </p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Quantity:</strong> @Model.Quantity</li>
            <li class="list-group-item"><strong>Price:</strong> @string.Format("{0:C}", @Model.Price)</li>
        </ul>
        <div class="mt-3 d-flex justify-content-between">
            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-info">Details</a>
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Edit</a>

            <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">Delete</a>

        </div>
    </div>
</div>